{% extends "/admin/base.html.twig" %}

{% block title %}Admin. | {{ parent() }}{% endblock %}

{% block body %}
    <div class="mx-5">
        <h1 class="my-5 text-center">Les histoires du site</h1>

        <table class="table table-hover text-center">
            <thead>
            <tr>
                <th>Id</th>
                <th>Histoire</th>
                <th>Contenu</th>
                <th>Cat√©gories</th>
                <th>Date de publication</th>
                <th>Date de publication</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for story in stories %}
                <tr>
                    <td>{{ story.id }}</td>
                    <td>{{ story.title | capitalize }}</td>
                    <td class="w-25">{{ story.content }}</td>
                    <td>
                        {% for category in story.storyCategory %}
                            {{ category.label }}
                            {% if not loop.last %}/{% endif %}
                        {% endfor %}
                    </td>
                    <td>{{ story.publicationDate | date('d/m/Y') }}</td>
                    <td>{{ story.lastUpdateDate | date('d/m/Y') }}</td>
                    <td>
                        <a href="{{ path('admin_story_edit', {'id': story.id}) }}" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                        <a href="{{ path('admin_story_delete', {'id': story.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
